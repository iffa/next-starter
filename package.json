{
  "name": "next-starter",
  "description": "Opinionated Next.js project starter template, with TypeScript, Chakra UI and more.",
  "version": "1.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iffa/next-starter.git"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "start-test 'yarn dev' 3000 'yarn cy:run'",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "format": "prettier --write --ignore-unknown .",
    "analyze": "cross-env ANALYZE=true yarn build",
    "cy:open": "cypress open",
    "cy:run": "cypress run",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": "eslint --cache --fix",
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "framer-motion": "4.1.3",
    "next": "10.1.3",
    "next-i18next": "8.2.0",
    "next-seo": "4.23.0",
    "next-yup": "1.1.0",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "yup": "0.32.9"
  },
  "devDependencies": {
    "@commitlint/cli": "12.1.1",
    "@commitlint/config-conventional": "12.1.1",
    "@next/bundle-analyzer": "10.1.3",
    "@types/node": "14.14.37",
    "@types/react": "17.0.3",
    "@typescript-eslint/eslint-plugin": "4.21.0",
    "@typescript-eslint/parser": "4.21.0",
    "autoprefixer": "10.2.5",
    "cross-env": "7.0.3",
    "cypress": "7.0.1",
    "eslint": "7.24.0",
    "eslint-config-prettier": "8.1.0",
    "eslint-plugin-react": "7.23.2",
    "husky": "6.0.0",
    "lint-staged": "10.5.4",
    "postcss": "8.2.9",
    "prettier": "2.2.1",
    "start-server-and-test": "1.12.1",
    "tailwindcss": "2.1.1",
    "typescript": "4.2.4"
  }
}
